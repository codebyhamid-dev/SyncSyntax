@model PostViewModel
@{
    ViewData["Title"] = "Create Post";
}
<style>
    .content_wrapper {
        padding: 20px;
        max-width: 1000px;
        margin: 0 auto;
        font-family: sans-serif
    }
</style>
<div class="content_wrapper">
    <div class="row">
        <div class="col-6">
            <h2>@ViewData["Title"]</h2>
        </div>

        <div class="col-6 text-end">
            <a class="btn btn-primary">Back to list</a>
        </div>
    </div>
    <hr />
    <form asp-action="Create" asp-controller="Post" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Post.Title"></label>
            <input asp-for="Post.Title" class="form-control" />
            <span asp-validation-for="Post.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Post.CategoryId">Category</label>
            <select asp-for="Post.CategoryId" class="form-control" asp-items="Model.Categories">
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="Post.CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Post.Author"></label>
            <input asp-for="Post.Author" class="form-control" />
            <span asp-validation-for="Post.Author" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Post.Content"></label>
            <textarea asp-for="Post.Content" class="form-control" rows="5">   </textarea>
            <span asp-validation-for="Post.Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FeatureImage"></label>
            <input asp-for="FeatureImage" type="file" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success mt-3">Create</button>
        <a  class="btn btn-secondary mt-3">Back to list</a>
    </form>
</div>